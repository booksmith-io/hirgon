{{> header id="home" }}
{{#template_name}}{{/template_name}}

<div class="row justify-content-center">
    <div class="col-12">
        {{> alert }}
        {{> settings/top }}
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-3">
        {{> settings/nav }}
    </div>
    <div class="col-sm-12 col-md-9">
        <div class="row heading">
            <h3>Password</h3>
        </div>
        <form action="/settings/password" method="POST" class="mb-4">
            <div class="row mb-2">
                <div class="col-12">
                    <label for="old_password" class="form-control-label fw-bold">Old Password</label>
                    <input id="old_password" name="old_password" type="password" class="form-control" required>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-12">
                    <label for="new_password" class="form-control-label fw-bold">New Password</label>
                    <input id="new_password" name="new_password" type="password" class="form-control" required>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-12">
                    <label for="confirm_new_password" class="form-control-label fw-bold">Confirm New Password</label>
                    <input id="confirm_new_password" name="confirm_new_password" type="password" class="form-control" required>
                </div>
            </div>
            <div class="button-group">
                <input type="submit" value="Update" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

{{> footer }}
