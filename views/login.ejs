<%- include('includes/header', {id: 'login'}) _%>
<div class="row h-100 justify-content-center align-items-center">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div id="logo-div" class="text-center">
            <i class="bi bi-<%= systemdata['settings:icon']['value'] %> rainbow logo"></i>
        </div>
        <%- include('includes/alert') _%>
        <form action="/login" method="POST">
            <div class="form-group form-floating">
                <input id="email" type="email" name="email" placeholder="Email address" class="form-control">
                <label for="email">Email address</label>
            </div>
            <div class="form-group form-floating">
                <input id="password" type="password" name="password" placeholder="Password" class="form-control">
                <label for="password">Password</label>
            </div>
            <input type="submit" value="Sign in" class="btn btn-primary">
        </form>
    </div>
</div>
<%- include('includes/footer') _%>
